@model HotelAppMVC.Models.BookRoomModel

@{
    ViewBag.Title = "Book A Room";
}

<h1>Book A Room</h1>

<h2>@Model.RoomType.Title</h2>
<p>
    @Model.RoomType.Description
</p>

<p>
    Start Date: @Model.StartDate <br />
    End Date: @Model.EndDate
</p>

@using (Html.BeginForm("FinaliseBooking", "RoomSearch"))
{
    <div class="form-group">
        <label asp-for="@Model.FirstName">First Name:</label>
        <input type="text" asp-for="@Model.FirstName" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName">LastName</label>
        <input type="text" asp-for="@Model.LastName" required />
    </div>
    @Html.HiddenFor(x => x.StartDate)
    @Html.HiddenFor(x => x.EndDate)
    @Html.HiddenFor(x => x.RoomTypeId)
    <button type="submit" class="btn btn-primary">Book</button>
}