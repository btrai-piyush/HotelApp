@model HotelAppMVC.Models.RoomSearchModel

@{
    ViewBag.Title = "Search Room";
}

<h1>Room Search</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.StartDate">Start Date: </label>
        <input type="date" asp-for="@Model.StartDate" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate">End Date: </label>
        <input type="date" asp-for="@Model.EndDate" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.AvailableRoomTypes?.Count > 0)
{
    <h2>Results</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.AvailableRoomTypes)
            {
                <tr>
                    <td>
                        <strong>@room.Title</strong><br />
                        @room.Description
                    </td>
                    <td>@string.Format("{0:C}", room.Price)</td>
                    <td>
                        @using (Html.BeginForm("ContinueBooking", "RoomSearch"))
                        {
                            @Html.HiddenFor(x => x.StartDate)
                            @Html.HiddenFor(x => x.EndDate)
                            @Html.Hidden("RoomTypeId", room.Id)
                            <input class="btn btn-sm btn-warning" type="submit" value="Book Now" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>


}